<script type="text/javascript">
	 
	  $(document).ready(function(){
	  	var body = $("html, body");
	  	// var to_show_height =$(window).height()-($(window).height()*0.2)
	  	
	  	var to_show_height =$("section.main_visual .banner").height()-($("section.main_visual .banner").height()*0.2);
	  	$('.drop_down_block').click(function(event) {
	  		body.animate({scrollTop:to_show_height}, '1500', 'swing', function() { 
			   
			});
	  	});








	  	var origin_width = $(window).width();
	  	// 1280=6%;
	  	var address_bar_height = 0;
	  	var video_responsive = function(){
	  		var window_height = $(window).height();
	  		if (detectmob()){
	  			if (address_bar_height == 0) {
	  				address_bar_height = window.screen.height -$(window).height();
	  			}
				window_height = window.screen.height - address_bar_height; 
	  		}
	  		var window_width = $(window).width();

	  		var frame_w = $('.talk_video iframe').width();
	  		$('.talk_video iframe').height(frame_w*0.56);


	  		// $('.main_visual').height(window_height);

	  		if($(window).width() > 1280) {
	  			$('.video_wrapper').show();
		  		// vx1=origin_width/window_width
		  		vx2=(origin_width/window_width)*100
		  		vx1=(origin_width-window_width)*0.7*(window_width/origin_width)+96
		  		

		  		

		  		
		  		$('.video_wrapper').css('margin-left',vx1*-1)
		  		$('#bgvid').css('width',vx2+'%')
		  		$('.video_wrapper').height(window_height);
	  		}
	  		else if($(window).width() > 768) {
	  			$('.video_wrapper').show();
		  		// vx1=origin_width/window_width
		  		vx1=(1280*-0.063)+((1280-window_width)*-0.4)
		  		

		  		

		  		vx2=((1280/window_width)*92)+2
		  		$('.video_wrapper').css('margin-left',vx1)
		  		$('#bgvid').css('width',vx2+'%')
		  		$('.video_wrapper').height(window_height);
		  	}else{
		  		$('.video_wrapper').hide();
		  	}

	  	}
	  	video_responsive();
	  	$(window).resize(function(){
	  		video_responsive();
	  	});


	  });

</script>

