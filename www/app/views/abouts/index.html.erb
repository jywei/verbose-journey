<script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>

<script>
  $('.slider-for').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      fade: false,
      asNavFor: '.slider-nav',
      dots: false,
      arrows: true,
      infinite: true,
      autoplay: true,
      autoplaySpeed: 2000,
      prevArrow:'<i class="fa fa-angle-left slick-prev"></i>',
      nextArrow:'<i class="fa fa-angle-right slick-next"></i>'
  });
  $('.slider-nav').slick({
      slidesToShow: 4,
      slidesToScroll: 1,
      asNavFor: '.slider-for',
      dots: false,
      arrows: false,
      centerMode: false,
      focusOnSelect: true
  });
</script>

<script>
