<%= form_for(@admin_product) do |f| %>
  <% if @admin_product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_product.errors.count, "error") %> prohibited this admin_product from being saved:</h2>

      <ul>
      <% @admin_product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label '名稱' %><br>
    <%= f.text_field :name, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label '網址名稱' %><br>
    不能含有中文、空白符號<br>
    <%= f.text_field :url_name, :class => "form-control", :required => true %>
  </div>


  <div class="form-group">
    <%= f.label '內容' %><br>
    <%= f.text_area :title, :class => "form-control", :rows => 6 %>
  </div>
<!--   <div class="form-group">
    <%= f.label '內容2' %><br>
    <%= f.text_area :title2, :class => "form-control", :rows => 6 %>
  </div> -->
  <div class="form-group">
    <%= f.label '細節' %><br>
    <%= f.cktext_area :content, :ckeditor => {:toolbar => 'mini'} %>
  </div>
  <div class="form-group">
    <%= f.label '品牌' %><br>
    <%= f.collection_select :brand_id, Admin::Brand.all, :id, :name, {prompt: "請選擇一個品牌"}, { :class => "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label '商店' %><br>
    <%= f.collection_select :store_ids, Admin::Store.order(:name), :id, :name, {}, {multiple: true} %>
  </div>
  <div class="form-group">
    <%= f.label '主視覺' %><br>
    <%= image_tag(@admin_product.main_visual.thumb.url) %>
    <%= f.file_field :main_visual %>
  </div>
  <div class="form-group">
    <%= f.label '種類' %><br>
    <%= f.number_field :price, :class => "form-control", placeholder: "1: egg, 2: chicken, 3: essence of chicken, 4. others" %>
  </div>
<!--   <div class="field">
    <%= f.label :stock %><br>
    <%= f.number_field :stock %>
  </div> -->
  <div class="form-group">
    <%= f.label '是否公開' %><br>
    <%= f.check_box :is_public %>
  </div>

  <div class="form-group">
    <%= f.label :is_show_where_to_buy, '是否顯示WhereToBuy' %><br>
    <%= f.check_box :is_show_where_to_buy %>
  </div>

  <div class="actions">
    <%= f.submit '更新產品', :class => "btn btn-primary btn-full" %>
  </div>
<% end %>


<script type="text/javascript">
  (function() {
    jQuery(function() {
      return $('#admin_product_store_ids').chosen({
        width: '100%'
      });
    });
  }).call(this);
</script>
