<h1>公益圖片管理</h1>

<br>

<%= link_to '新增公益圖片', new_admin_image_path, class: "btn btn-primary" %>

<hr>

<table class="table table-hover">
  <thead>
    <tr>
      <th>圖片</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_images.each do |admin_image| %>
      <tr>
        <td><%= image_tag(admin_image.file.thumb.url) %></td>
        <td><%= link_to 'Show', admin_image, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_admin_image_path(admin_image), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', admin_image, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


