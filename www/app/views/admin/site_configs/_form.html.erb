<%= form_for(@admin_site_config) do |f| %>
  <% if @admin_site_config.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_site_config.errors.count, "error") %> prohibited this admin_site_config from being saved:</h2>

      <ul>
      <% @admin_site_config.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, '標題 ( Meta_Title ) ' %><br>
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description, '內容 ( Meta_Description ) ' %><br>
    <%#= f.cktext_area :description, :ckeditor => {:toolbar => 'mini'} %>
    <%= f.text_area :description, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label '公司名稱' %><br>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label '統一編號' %><br>
    <%= f.text_field :tax_id, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label '電話號碼' %><br>
    <%= f.text_field :phone, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label '傳真號碼' %><br>
    <%= f.text_field :fax, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label '地址' %><br>
    <%= f.text_field :address, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email,'電子郵件(聯絡我們收信信箱)' %><br>
    <%= f.text_field :email, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label '網站網址' %><br>
    <%= f.text_field :website_url, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'FB網址' %><br>
    <%= f.text_field :facebook_url, :class => "form-control" %>
  </div>


  <div class="form-group">
    <%= f.label '主視覺LOGO是否顯示' %><br>
    <%= f.check_box :main_visual_logo_is_show %>
  </div>
  <div class="form-group">
    <%= f.label '品牌列LOGO是否顯示' %><br>
    <%= f.check_box :brands_list_logo_is_show %>
  </div>

  <div class="form-group">
    <%= f.label :slide_speed, '輪播速度 -- 1000 = 1秒 最少3000' %><br>
    <%= f.number_field :slide_speed, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :privacy_policy, '隱私政策' %><br>
    <%= f.cktext_area :privacy_policy, :ckeditor => {:toolbar => 'mini'} %>
    <%#= f.text_area :privacy_policy, :class => "form-control" %>
  </div>  
  <div class="form-group">
    <%= f.label :terms_of_service, '服務條款' %><br>
    <%= f.cktext_area :terms_of_service, :ckeditor => {:toolbar => 'mini'} %>
    <%#= f.text_area :terms_of_service, :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit '網站管理 更新', :class => "btn btn-primary btn-full" %>
  </div>
<% end %>
